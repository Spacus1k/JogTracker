<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/avatarImageHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:id="@+id/firstNameHeader"
        app:layout_constraintStart_toEndOf="@+id/avatarImageHeader"
        app:layout_constraintTop_toTopOf="@+id/avatarImageHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/name_first"
        android:textSize="22sp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/lastNameHeader"
        app:layout_constraintStart_toEndOf="@+id/firstNameHeader"
        app:layout_constraintTop_toTopOf="@+id/avatarImageHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/name_last"
        android:textSize="22sp"
        android:layout_marginLeft="4dp" />

    <TextView
        android:id="@+id/emailHeader"
        app:layout_constraintStart_toEndOf="@+id/avatarImageHeader"
        app:layout_constraintTop_toBottomOf="@+id/firstNameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/email"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginLeft="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>