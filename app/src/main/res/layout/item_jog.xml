<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/jog_item_margin"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:splitMotionEvents="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/jog_item_padding">

        <TextView
            android:id="@+id/jogDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/text_size_jog_item_distance"
            tools:text="100,000 km" />

        <TextView
            android:id="@+id/jogDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_jog_item_date"
            tools:text="date 00.00.0000, time 00:00" />
    </LinearLayout>
</androidx.cardview.widget.CardView>